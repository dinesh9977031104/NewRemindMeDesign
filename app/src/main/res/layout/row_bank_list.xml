<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        style="@style/dialog_main_linear_layout_style">


        <TextView
            style="@style/heading_textview_style"
            android:layout_marginBottom="4dp"
            android:text="Select Your Bank" />


        <LinearLayout style="@style/bank_list_linear_layout_style">

            <android.support.v7.widget.CardView
                style="@style/circle_cardview_style"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/circle_imageview_style"
                    android:src="@drawable/bank_axis" />
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/bank_textview_style"
                android:text="Axis Bank" />
        </LinearLayout>

        <View style="@style/view_style" />

        <LinearLayout style="@style/bank_list_linear_layout_style">

            <android.support.v7.widget.CardView
                style="@style/circle_cardview_style"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/circle_imageview_style"
                    android:src="@drawable/bank_hdfc" />
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/bank_textview_style"
                android:text="HDFC Bank" />
        </LinearLayout>

        <View style="@style/view_style" />

        <LinearLayout style="@style/bank_list_linear_layout_style">

            <android.support.v7.widget.CardView
                style="@style/circle_cardview_style"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/circle_imageview_style"
                    android:src="@drawable/bank_icici" />
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/bank_textview_style"
                android:text="ICICI Bank" />
        </LinearLayout>

        <View style="@style/view_style" />

        <LinearLayout style="@style/bank_list_linear_layout_style">

            <android.support.v7.widget.CardView
                style="@style/circle_cardview_style"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/circle_imageview_style"
                    android:src="@drawable/bank_sbi" />
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/bank_textview_style"
                android:text="SBI Bank" />
        </LinearLayout>

        <View style="@style/view_style" />

        <LinearLayout style="@style/bank_list_linear_layout_style">

            <android.support.v7.widget.CardView
                style="@style/circle_cardview_style"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/circle_imageview_style"
                    android:src="@drawable/bank_kotak" />
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/bank_textview_style"
                android:text="Kotak Mahindra Bank" />
        </LinearLayout>

        <View style="@style/view_style" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <Button
                style="@style/btn_style"
                android:text="Cancel" />

            <View style="@style/horizontal_view_style" />

            <Button
                style="@style/btn_style"
                android:text="ok" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>